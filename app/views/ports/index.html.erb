<p id="notice"><%= notice %></p>

<h1>Список портов</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Адрес</th>
      <th>Оценка</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ports.each do |port| %>
      <tr>
        <td><%= port.name %></td>
        <td><%= port.address %></td>
        <td><%= port.rating %></td>
        <td><%= link_to 'Открыть', port %></td>
        <td><%= link_to 'Редактировать', edit_port_path(port) %></td>
        <td><%= link_to 'Удалить', port, method: :delete, data: { confirm: 'Уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить порт', new_port_path %>
