<p id="notice"><%= notice %></p>

<h1>Темы</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Отображать в боковом меню</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name %></td>
        <td><%= topic.display_in_sidebar %></td>
        <td><%= link_to 'Открыть', topic %></td>
        <td><%= link_to 'Изменить', edit_topic_path(topic) %></td>
        <td><%= link_to 'Удалить', topic, method: :delete, data: { confirm: 'Уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать тему +', new_topic_path %>
<p>
  <%= link_to 'Назад', posts_path %>
</p>
